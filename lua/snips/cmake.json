{
  "user": {
    "prefix": "default",
    "body":[
    "cmake_minimum_required(VERSION $1)",
    "project($2 VERSION 1.0)",
    "set(CMAKE_CXX_STANDARD $3)",
    "set(CMAKE_CXX_STANDARD_REQUIRED ON)",
    "file(GLOB_RECURSE SOURCE_FILES  ./src/*.cc)",
    "add_executable(app $5 @{SOURCE_FILES})",
    "target_include_directories(app PUBLIC $6 ./inc)",
    "#Debug",
    "target_compile_options(app PUBLIC   -Werror -ggdb -O0 -Wall -Wextra  -Wextra -Weffc++  -Wsign-conversion -pedantic-errors)",
    "",
    "#Release",
    "# target_compile_options(app PUBLIC   -Werror  -O3 -Wall -Wextra  -Wextra -Weffc++  -Wsign-conversion -pedantic-errors)",
    "#-Werror add this option if you want to treat warnings as errors"
    ]
  }
}
